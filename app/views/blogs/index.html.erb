<h1>Blog#index</h1>
<p>Find me in app/views/blog/index.html.erb</p>
<% title "Blogs" %>

<ul>
	<li>
		<%- @blogs.each do |blog| -%>
			<h2><%= h blog['title'] %></h2>
			<p><%= h blog['description'] %></p>
			<p><%= link_to "more", :controller => "articles", :source => URI.escape(blog['link'], Regexp.new("[^#{URI::PATTERN::UNRESERVED}]")) %></p>
		<% end -%>
	</li>
</ul>

